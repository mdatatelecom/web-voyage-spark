# ===========================================
# Configuração do Servidor
# ===========================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ===========================================
# Banco de Dados PostgreSQL
# ===========================================
DATABASE_URL=postgresql://app:senha_segura@localhost:5432/datacenter
DB_HOST=localhost
DB_PORT=5432
DB_NAME=datacenter
DB_USER=app
DB_PASSWORD=senha_segura
DB_SSL=false

# ===========================================
# Autenticação JWT
# ===========================================
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_minimo_32_caracteres
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=sua_chave_refresh_super_secreta_aqui_minimo_32_caracteres
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=https://seu-dominio.com,http://localhost:5173

# ===========================================
# Upload de Arquivos
# ===========================================
UPLOAD_DIR=/opt/datacenter-app/uploads
MAX_FILE_SIZE=52428800
STORAGE_URL=https://seu-dominio.com/uploads

# ===========================================
# Email (Resend)
# ===========================================
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=noreply@seu-dominio.com

# ===========================================
# WhatsApp (Evolution API)
# ===========================================
EVOLUTION_API_URL=https://evolution.seu-dominio.com
EVOLUTION_API_KEY=sua_api_key_evolution
EVOLUTION_INSTANCE=datacenter

# ===========================================
# Webhook URL (para Evolution API)
# ===========================================
WEBHOOK_URL=https://api.seu-dominio.com/webhooks/whatsapp

# ===========================================
# Logs
# ===========================================
LOG_LEVEL=info
LOG_DIR=/opt/datacenter-app/logs

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
